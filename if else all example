find even and odd number:

const n = 222

if (n%2==0){
    console.log("even");
}
else{
    console.log("odd");
}



Find leap year or not using if else:

const y = 1997

if (y%4==0){
    console.log("is a leap year");
}
else{
    console.log("is a not leap year");
}




(input salary and grade and add bonus grade >15 then bonus 50% and grade <15 then bonus 25%)

const salary = 16000
const grade = 17
const bonus1 = salary * 50/100
const bonus2 = salary * 25/100

if(grade>15){
    console.log("grade");
    console.log(grade);
    console.log("salary");
    console.log(salary);
    console.log("bonus:");
    console.log( bonus1);
    console.log("Total salary:");
    console.log( salary+bonus1);
}
else if (grade<=15){
    console.log("grade");
    console.log(grade);
    console.log("salary");
    console.log(salary);
    console.log("bonus:");
    console.log(bonus2);
    console.log("Total salary:");
    console.log(salary+bonus2);
}




const salary =1600
const grade = 17
const bonus1 = salary * 50/100
const bonus2 = salary * 25/100

if (grade>15){
    console.log ("Grade",grade);
    console.log("Salary",salary);
    console.log("Bonus",bonus1);
    console.log("Total salary",salary+bonus1);

}
else if(grade<=15){
    console.log ("Grade",grade);
    console.log("Salary",salary);
    console.log("Bonus",bonus2);
    console.log("Total salary",salary+bonus2);
}



