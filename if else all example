//Find equal number are not:using nested if else:

const a = 5
const b = 5
const c = 5
 
if(a==b){
    if(a==c){
        console.log("number are equal");
    }
    else{
        console.log("number are not equal");
    }
}
else{
    console.log("number are not equal");
}
